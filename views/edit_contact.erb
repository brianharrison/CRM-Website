<h2>Edit a Contact</h2>

<form action='/contacts/<%= @contact.id %>' method='post'>
	<input type='hidden' name='_method' value='put'>
	<input type='text' name='first_name' value='<%= @contact.first_name %>'>
	<input type='text' name='last_name' value='<%= @contact.last_name %>'>
	<input type='text' name='email' value='<%= @contact.email %>' style='width: 200px;'>
	<input type='text' name='note' value='<%= @contact.note %>' style='width: 200px;'>
	<input type='submit' value='Submit Your Edits'>
</form>